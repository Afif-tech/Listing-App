<%- include('layout/header')  %>

<div class="container pt-6">
    <div class="card shadow pt-4 px-4 w-75 mx-auto my-auto">
        <div class="card-header bg-custom text-black">
            <h3>User Login</h3>
        </div>
        <div class="card-body p-4">
            <form action="/admin/login" method="POST" id="add-form">
                <div class="mb-3">
                    <label for="email" class="fw-bold">Email</label>
                    <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="fw-bold">Password</label>
                    <div class="position-relative">
                        <input type="password" id="password" name="password" class="form-control form-control-lg custom-password-position" placeholder="Enter password" required />
                        <i id="togglePassword" class="fas fa-eye position-absolute custom-eyes" onclick="togglePassword()"></i>
                    </div>
                </div>
                <div class="mb-3 d-grid">
                    <input type="submit" name="submit" value="Login" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

    
<%- include('layout/footer') %>